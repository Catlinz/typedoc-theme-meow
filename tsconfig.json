{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2018",
        "declaration": false,
        "experimentalDecorators": true,
        "lib": [
            "es6", "es2018", "dom"
        ],
        "noImplicitReturns": true,
        "noImplicitAny": false,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        
        "outDir": "./dist",
        "removeComments": true,
        "sourceMap": false,
        "strictNullChecks": false,
    },
    "exclude": [
        "node_modules",
        "./src/test",
        "typedoc",
        "**/*.spec.ts"
    ]
}